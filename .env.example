# Django Secret Key - Generate a new one for production
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,titanium.sjis.edu.bd

# Database Configuration for Production (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=workshop_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# SSLCommerz Configuration
SSLCOMMERZ_STORE_ID=your-store-id-here
SSLCOMMERZ_STORE_PASSWORD=your-store-password-here
SSLCOMMERZ_IS_SANDBOX=True

# Email Configuration (if needed later)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Domain
DOMAIN=https://titanium.sjis.edu.bd
